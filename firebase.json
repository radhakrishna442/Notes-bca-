{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/dashboard",
        "destination": "/dashboard.html",
        "type": 301
      },
      {
        "source": "/admin",
        "destination": "/admin.html",
        "type": 301
      }
    ]
  }
}